{
  "name": "automagica11y",
  "version": "0.3.1-alpha.0",
  "description": "A lightweight, framework-agnostic accessibility utility for declarative ARIA and a11y automation.",
  "type": "module",
  "main": "dist/automagica11y.cjs.js",
  "module": "dist/automagica11y.esm.js",
  "browser": "dist/automagica11y.min.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/automagica11y.esm.js",
      "require": "./dist/automagica11y.cjs.js",
      "default": "./dist/automagica11y.esm.js"
    },
    "./browser": {
      "default": "./dist/automagica11y.min.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "validate": "npm run typecheck && npm run lint",
    "deploy:vercel": "vercel --prod",
    "docs:dev": "npm --prefix docs run dev",
    "docs:build": "npm --prefix docs run build",
    "docs:preview": "npm --prefix docs run preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "aria",
    "web-components",
    "javascript",
    "typescript"
  ],
  "author": "Mark Zebley",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "eslint": "^9.13.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.21.0",
    "tslib": "^2.6.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.9.0",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "starlight-theme-rapide": "^0.5.2"
  }
}
