{
  "name": "automagica11y",
  "version": "0.3.0",
  "description": "A lightweight, framework-agnostic accessibility utility for declarative ARIA and a11y automation.",
  "type": "module",
  "main": "dist/automagica11y.cjs.js",
  "module": "dist/automagica11y.esm.js",
  "browser": "dist/automagica11y.min.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "validate": "npm run typecheck && npm run lint",
    "deploy:vercel": "vercel --prod",
    "docs:dev": "npm --prefix docs run dev",
    "docs:build": "npm --prefix docs run build",
    "docs:preview": "npm --prefix docs run preview"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "aria",
    "web-components",
    "javascript",
    "typescript"
  ],
  "author": "Mark Zebley",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@eslint/js": "^9.13.0",
    "eslint": "^9.13.0",
    "jsdom": "^24.0.0",
    "rollup": "^4.21.0",
    "tslib": "^2.6.2",
    "typescript": "^5.7.2",
    "vitest": "^1.3.1",
    "typescript-eslint": "^8.9.0"
  }
}
